{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}


<header>
    <!-- Logo -->
    <div class="img-responsive">
       <a href="http://extinct.ly">
       <img src="http://extinct.ly/images/logo.png">
       </a>
    </div>

    <div class="nav-wrapper">
       <div class="navbar navbar-inverse">
          <div class="navbar-header">
             <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             </a>
          </div>
          <div class="navbar-collapse collapse">
             <ul id="navigation" class="nav navbar-nav">
                <div class="row">
                    
                       <li
                          about="http://extinct.ly/dashboard"
                          class="col-sm-2 "
                       >
                          <a href="http://extinct.ly/dashboard" property="dc:title">
                             Dashboard
                          </a>
                       </li>
                    
                       <li
                          about="http://extinct.ly/map"
                          class="col-sm-2 "
                       >
                          <a href="http://extinct.ly/map" property="dc:title">
                             World Map
                          </a>
                       </li>
                    
                       <li
                          about="http://extinct.ly/texts"
                          class="col-sm-2 "
                       >
                          <a href="http://extinct.ly/texts" property="dc:title">
                             Texts
                          </a>
                       </li>
                    
                       <li
                          about="http://extinct.ly/participants"
                          class="col-sm-2 "
                       >
                          <a href="http://extinct.ly/participants" property="dc:title">
                             Participants
                          </a>
                       </li>
                    
                       <li
                          about="http://extinct.ly/casestudies"
                          class="col-sm-2 "
                       >
                          <a href="http://extinct.ly/casestudies" property="dc:title">
                             Case Studies
                          </a>
                       </li>
                    
                    <li class="col-sm-2 dropdown">
                       <a href="#" class="dropdown-toggle" data-toggle="dropdown">Live <b class="caret"></b></a>
                       <ul class="dropdown-menu">
                          <li class="text-center"><a href="http://blog.extinct.ly">Blog</a></li>
                          <li class="text-center"><a href="http://extinct.ly/programme">Programme</a></li>
                       </ul>
                    </li>
                </div>
             </ul>
          </div>
       </div>
    </div>

    <hr id="live">

</header>

<div class="container blog">

    <main class="content" role="main">

        <article class="{{post_class}}">

            <div class="row">
                <div class="col-lg-2">
                    <p class="dates">{{date format="DD"}}<br>{{date format="MMM"}}<br>{{date format="YYYY"}}</p>
                </div>

                <div class="col-lg-8 title">
                    <h2>{{title}}</h2>
                    {{#author}}
                        <h4>
                            <a href="{{url}}">{{name}}</a>
                        </h4>
                    {{/author}}
                </div>

                <div class="col-lg-2">
                    <p class="dates">{{date published_at format="h:hh"}}<br>{{date published_at format="A"}}<br>{{date published_at format="YYYY"}}</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <section class="post-content">
                        <p>
                            {{content}}
                        </p>
                    </section>
                </div>
            </div>

            <hr>

            <footer class="post-footer">

                {{! Everything inside the #author tags pulls data from the author }}
                {{#author}}

                    <section class="author">
                        <h4><a href="{{url}}">{{name}}</a></h4>
                    </section>

                {{/author}}

                <section class="share">
                    <a class="icon-twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                        <i class="fa fa-twitter fa-lg"></i>
                    </a>&nbsp;
                    <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                        <i class="fa fa-facebook fa-lg"></i>
                    </a>&nbsp;
                    <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                       onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                        <i class="fa fa-google-plus fa-lg"></i>
                    </a>
                </section>

            </footer>

        </article>

    </main>

</div> <!-- /container -->

{{/post}}
