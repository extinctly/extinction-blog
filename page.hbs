{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

<header>
    <!-- Logo -->
    <div class="img-responsive">
       <a href="http://extinct.ly">
       <img src="http://extinct.ly/images/logo.png">
       </a>
    </div>

    <div class="nav-wrapper">
       <div class="navbar navbar-inverse">
          <div class="navbar-header">
             <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             </a>
          </div>
          <div class="navbar-collapse collapse">
             <ul id="navigation" class="nav navbar-nav">
                <div class="row">
                    
                       <li
                          about="http://extinct.ly/dashboard"
                          class="col-sm-2 "
                       >
                          <a href="http://extinct.ly/dashboard" property="dc:title">
                             Dashboard
                          </a>
                       </li>
                    
                       <li
                          about="http://extinct.ly/map"
                          class="col-sm-2 "
                       >
                          <a href="http://extinct.ly/map" property="dc:title">
                             World Map
                          </a>
                       </li>
                    
                       <li
                          about="http://extinct.ly/texts"
                          class="col-sm-2 "
                       >
                          <a href="http://extinct.ly/texts" property="dc:title">
                             Texts
                          </a>
                       </li>
                    
                       <li
                          about="http://extinct.ly/participants"
                          class="col-sm-2 "
                       >
                          <a href="http://extinct.ly/participants" property="dc:title">
                             Participants
                          </a>
                       </li>
                    
                       <li
                          about="http://extinct.ly/casestudies"
                          class="col-sm-2 "
                       >
                          <a href="http://extinct.ly/casestudies" property="dc:title">
                             Case Studies
                          </a>
                       </li>
                    
                    <li class="col-sm-2 dropdown">
                       <a href="#" class="dropdown-toggle" data-toggle="dropdown">Live <b class="caret"></b></a>
                       <ul class="dropdown-menu">
                          <li class="text-center"><a href="http://blog.extinct.ly">Blog</a></li>
                          <li class="text-center"><a href="http://extinct.ly/programme">Programme</a></li>
                       </ul>
                    </li>
                </div>
             </ul>
          </div>
       </div>
    </div>

    <h2 class="page-title">EXTINCTION LIVE</h2>
    <hr id="live">
            
        <!--<a class="subscribe-button icon-feed" href="{{@blog.url}}/rss/">Subscribe</a>-->

        <!--<a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>-->
</header>

<div class="container blog">

    <main class="content" role="main">

        <article class="{{post_class}}">
        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

            <div class="row">
                <div class="col-lg-2">
                    <p class="dates">{{date format="DD MMM YYYY"}}</p>
                </div>

                <div class="col-lg-8 title">
                    <h3>
                        {{title}}<br>{{author}}
                    </h3>
                    {{#author}}
                        <h4>
                            <a href="{{url}}">{{name}}</a>
                        </h4>
                    {{/author}}
                </div>

                <div class="col-lg-2">
                    <p class="dates">{{date published_at format="h:hh"}}<br>{{date published_at format="A"}}<br>{{date published_at format="YYYY"}}</p>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <section class="post-content">
                        <p>{{content}}</p>

                        <a href="{{url}}">Read more</a>
                    </section>
                </div>
            </div>
            <hr>

        {{/post}}
        </article>

    </main>

</div> <!--container -->
